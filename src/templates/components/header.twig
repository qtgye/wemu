{% set solution_links = [
	{ url: '/barbershops.html', text: 'Barbershops And Salons'},
	{ url: '/', text: 'Side Gig'},
	{ url: '/', text: 'Gym'},
	{ url: '/freelancers.html', text: 'Freelancers'},
	{ url: '/cafe.html', text: 'Cafes'},
	{ url: '/', text: 'Shops'},
] %}
<header class="header">
	<div class="header__content">
		<a href="/" class="header__brand">
			<img src="/images/logo.svg" alt="">
		</a>
		<button class="header__nav-toggle header__nav-toggle--small"><img src="/images/chevron-down.svg" alt=""></button>
		<nav class="nav">
			<!-- Primary Links -->
			<div class="nav__primary">
				<a href="/features.html" class="nav__primary__item">Features</a>
				<span class="nav__primary__item nav__primary__item--dropdown nav__primary__item--large-only">
					<span class="header__nav-toggle header__nav-toggle--large">Solutions</span>
					<!-- Dropdown on Large Device -->
					<div class="nav__secondary nav__secondary--large">
						<div class="nav__secondary__label">Solutions</div>
						<div class="nav__secondary__items">
							{% for link in solution_links %}
								<a href="{{ link.url }}" class="nav__secondary__item nav__secondary__item--barber"><span>{{ link.text }}</span></a>
							{% endfor %}
						</div>
					</div>
				</span>
				<a href="/" class="nav__primary__item">Pricing</a>
				<a href="/login.html" class="nav__primary__item nav__primary__item--small-only">Log In</a>
				<a href="/" class="nav__primary__item nav__primary__item--small-only">Sign Up</a>
			</div>
			<!-- Dropdown on Small Device -->
			<div class="nav__secondary nav__secondary--small">
				<div class="nav__secondary__label">Solutions</div>
				<div class="nav__secondary__items">
					{% for link in solution_links %}
						<a href="{{ link.url }}" class="nav__secondary__item nav__secondary__item--barber"><span>{{ link.text }}</span></a>
					{% endfor %}
				</div>
			</div>
		</nav>
		<div class="header__auth">
			<a href="/login.html" class="header__auth__button header__auth__button--large-only button button--text">Login</a>
			<a href="/" class="header__auth__button button button--outline button--dark-gray">Sign Up</a>
		</div>
	</div>
</header>
